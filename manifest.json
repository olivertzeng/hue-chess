{
    "manifest_version": 3,
    "name": "Hue Chess",
    "version": "0.9.0",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {},
    "background": {
        "service_worker": "background-bundle.js"
    },
    "content_scripts": [
        {
        "matches": ["*://lichess.org/*"],
        "js": ["content-bundle.js"],
        "css": ["customStyles.css", "toastify.css", "tippy.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources":  ["settings.html", "perks.html", "imgs/*"],
            "matches": ["*://lichess.org/*"]
        }
    ]
}
