{
    "manifest_version": 3,
    "name": "Hue Chess",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {},
    "background": {
        "service_worker": "build/background.js"
    },
    "content_scripts": [
        {
        "matches": ["*://lichess.org/*"],
        "js": ["build/background.js", "build/content.js"],
        "css": ["customStyles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources":  ["settings.html"],
            "matches": ["<all_urls>"]
        }
    ]
}
  